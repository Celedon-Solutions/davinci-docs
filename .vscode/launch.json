{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mint Dev Port 3333",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "mint",
                "dev",
                "--port",
                "3333"
            ],
            "console": "integratedTerminal"
        },
    ]
} 